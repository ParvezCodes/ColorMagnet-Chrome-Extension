{
  "manifest_version": 3,
  "name": "ColorMagnet",
  "version": "1.0",
  "description": "A simple color picker Chrome extension , Easily pick any color of screen in one click ",
  "action": {
    "default_popup": "index.html"
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "120": "icons/icon120.png"
  },
  "permissions": ["activeTab", "storage"]
}
